<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fozimat.fozimat_github">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="com.fozimat.fozimat_github.READ_DATABASE"
        android:protectionLevel="normal"/>

    <permission android:name="com.fozimat.fozimat_github.WRITE_DATABASE"
        android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/github"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FozimatGithub">
        <provider
            android:name=".provider.UserProvider"
            android:authorities="com.fozimat.fozimat_github"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.fozimat.fozimat_github.READ_DATABASE"
            android:writePermission="com.fozimat.fozimat_github.WRITE_DATABASE">
        </provider>

        <activity android:name=".DetailFavActivity" />
        <activity android:name=".FavoriteActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/search_user" />
    </application>

</manifest>